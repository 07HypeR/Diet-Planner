{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "components/shared/Input.jsx",
    "components/shared/Button.jsx",
    "app/index.jsx",
    "services/FirebaseConfig.js",
    "app/_layout.tsx",
    "app/auth/SignUp.jsx",
    "app/auth/SignIn.jsx"
  ]
}
